---
import { Building2, Calendar, Mail, MapPin, Phone, Video } from 'lucide-react';
import localImg02 from '../assets/office-02.webp';
import localImg03 from '../assets/office-03.webp';
import localImg05 from '../assets/office-05.webp';
import localImg06 from '../assets/office-06.webp';
import localImg08 from '../assets/office-08.webp';
const benefits = [
  {
    icon: Building2,
    title: "Dirección Comercial y Fiscal Prestigiosa",
    description: "Ubicación privilegiada en Mexicali para tu negocio para tus tramites y licitaciones",
    image: localImg08
  },
  {
    icon: Mail,
    title: "Gestión de Correspondencia",
    description: "Recepción y manejo profesional de tu correspondencia",
    image: localImg03
  },
  {
    icon: Phone,
    title: "Atención Telefónica",
    description: "Recepcionista profesional para tus llamadas",
    image: localImg05
  },
  {
    icon: Video,
    title: "Salas de Juntas",
    description: "Acceso a espacios profesionales para reuniones",
    image: localImg06
  },
  {
    icon: Calendar,
    title: "Flexibilidad",
    description: "Sin contratos largos ni inversiones grandes",
    image: localImg02
  },
  {
    icon: MapPin,
    title: "Ubicación Céntrica",
    description: "Fácil acceso en zona a 5 minutos del centro civico de Mexicali",
    image: localImg08
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Ventajas de tu Oficina Virtual</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="group relative overflow-hidden rounded-xl shadow-lg hover:scale-105 transition-all duration-300">
          <div 
            class="absolute inset-0 bg-cover bg-center z-0 transform group-hover:scale-110 transition-transform duration-500"
            style={`background-image: url('${benefit.image.src}')`}
          />
          <div class="relative bg-black/50 backdrop-blur-sm p-6 h-full z-10">
            <div class="text-white mb-4">
              <benefit.icon className="w-8 h-8" />
            </div>
            <h3 class="text-xl font-semibold mb-2 text-white">{benefit.title}</h3>
            <p class="text-white/90">{benefit.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>