---

import imgBackgroundMobile from '../assets/office-08-mobile.webp';
// import imgBackgroundMobile from '../assets/office-07.webp';
import imgBackground from '../assets/office-08.webp';
import CountdownTimer from './CountdownTimer';
const bgNormal= `url("${imgBackground.src}")`;
const bgMobile= `url("${imgBackgroundMobile.src}")`;

---

<header 
  class="relative min-h-[80vh] flex items-center text-white py-5 md:py-20 overflow-hidden backgroundCSS"
  
>
  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-6 animate-fade-in">
        Tu Oficina Virtual en Mexicali
      </h1>
      <p class="text-5xl md:text-6xl  mb-8 animate-fade-in-delay">
        ¡Paga 5 meses y obtén el 6to GRATIS!
      </p>
      <div class="mb-8 animate-fade-in-delay-2">
        <p class="text-xl mb-4">La promoción termina en:</p>
        <CountdownTimer client:idle />
      </div>
      <a
        href="#lead-form"
        class="inline-flex items-center gap-2 mt-2 md:mt-8 bg-white text-primary px-8 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-gray-100 transition-all hover:scale-105 animate-fade-in-delay-3"
      >
        ¡Obtener Promoción Ahora!
      </a>
      
    </div>
  </div>
</header>

<style define:vars={{bgNormal,bgMobile}}>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }

  .animate-fade-in-delay {
    animation: fadeIn 0.5s ease-out 0.3s forwards;
    opacity: 0;
  }

  .animate-fade-in-delay-2 {
    animation: fadeIn 0.5s ease-out 0.6s forwards;
    opacity: 0;
  }

  .animate-fade-in-delay-3 {
    animation: fadeIn 0.5s ease-out 0.9s forwards;
    opacity: 0;
  }
  .backgroundCSS{
    background-color: #e3463d; 
    background-image: var(--bgNormal);
    /* backgroundImage:   */
    background-blend-mode: multiply;
    background-size: cover;
    background-position: center;
  }  
  @media (max-width: 425px) {
    .backgroundCSS{
      background-image: var(--bgMobile);
    }
  }
</style>